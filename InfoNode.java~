import java.io.*;
import java.util.*;

public class InfoNode {
	public InfoNodeType type; 
	boolean isinstance;
	boolean isconst;
	boolean isleftvalue;
	int value;
	int width;
	
	public class info {
		InfoNodeArray array;
		InfoNodeFunction function;
		InfoNode pointer;
		InfoNodeRecord record;
		
		public info() {
			this.array = null;
			this.function = null;
			this.pointer = null;
			this.record = null;
		}
		
	};
	info info;
	
	public InfoNode() {
		this.type = null;
		this.isinstance = this.isconst = this.isleftvalue = false;
		value = 0;
		width = 4;
		this.info = new info();
	}

}
